    // 定义一些通用的处理函数

    // 将单词的首字母转大写
    firstLetter2UpperCase = function(word){
        if(!word){
            return word;
        }
        return word.replace(word[0],word[0].toUpperCase());
    }

    // 将单词的首字母转小写
    firstLetter2LowerCase = function(word){
        if(!word){
            return word;
        }
        return word.replace(word[0],word[0].toLowerCase());
    }

    fixWord = function(word){
        if(word.toUpperCase() === "PATTERN"){
            return "Pattern";
        }
