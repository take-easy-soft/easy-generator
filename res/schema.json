{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Api": {
            "description": "请求实体",
            "properties": {
                "desc": {
                    "description": "请求方法注释",
                    "type": "string"
                },
                "method": {
                    "$ref": "#/definitions/ApiType",
                    "description": "请求类型"
                },
                "name": {
                    "description": "请求方法名称",
                    "type": "string"
                },
                "path": {
                    "description": "请求路径",
                    "type": "string"
                },
                "request": {
                    "description": "API 请求参数",
                    "properties": {
                        "body": {
                            "$ref": "#/definitions/Request",
                            "description": "body参数, 会创建一个Dto实体"
                        },
                        "pathVar": {
                            "$ref": "#/definitions/Request",
                            "description": "路径参数:/path/{param}, 会转为方法参数"
                        },
                        "queryParam": {
                            "$ref": "#/definitions/Request",
                            "description": "query参数, 会创建一个Dto实体"
                        }
                    },
                    "type": "object"
                },
                "response": {
                    "description": "API 响应实体",
                    "properties": {
                        "body": {
                            "$ref": "#/definitions/Response"
                        }
                    },
                    "required": [
                        "body"
                    ],
                    "type": "object"
                }
            },
            "required": [
                "desc",
                "method",
                "name",
                "path",
                "response"
            ],
            "type": "object"
        },
        "ApiType": {
            "description": "API类型",
            "enum": [
                "DELETE",
                "GET",
                "POST",
                "PUT"
            ],
            "type": "string"
        },
        "Param": {
            "description": "请求实体参数",
            "properties": {
                "desc": {
                    "description": "参数注释",
                    "type": "string"
                },
                "isList": {
                    "default": false,
                    "description": "是否为List, 只适用于根级属性",
                    "type": "boolean"
                },
                "sub": {
                    "$ref": "#/definitions/Request",
                    "description": "子实体"
                },
                "type": {
                    "$ref": "#/definitions/Type",
                    "description": "Java类型"
                },
                "valid": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/Valid"
                        },
                        {
                            "items": {
                                "$ref": "#/definitions/Valid"
                            },
                            "type": "array"
                        }
                    ],
                    "description": "参数验证,可空 \nPathVariable当前只支持一个Valid"
                }
            },
            "required": [
                "desc",
                "type"
            ],
            "type": "object"
        },
        "Request": {
            "additionalProperties": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/Param"
                    },
                    {
                        "type": "boolean"
                    }
                ]
            },
            "description": "请求实体",
            "properties": {
                "isList": {
                    "default": false,
                    "description": "是否为List, 只适用于根级属性",
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "Response": {
            "additionalProperties": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/ResponseItem"
                    },
                    {
                        "type": "boolean"
                    }
                ]
            },
            "description": "响应实体",
            "properties": {
                "isList": {
                    "default": false,
                    "description": "是否为List, 只适用于根级属性",
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "ResponseItem": {
            "description": "响应实体项",
            "properties": {
                "desc": {
                    "description": "注释",
                    "type": "string"
                },
                "isList": {
                    "default": false,
                    "description": "是否为List, 只适用于根级属性",
                    "type": "boolean"
                },
                "sub": {
                    "$ref": "#/definitions/Response",
                    "description": "子实体"
                },
                "type": {
                    "$ref": "#/definitions/Type",
                    "description": "java类型"
                }
            },
            "required": [
                "desc",
                "type"
            ],
            "type": "object"
        },
        "Type": {
            "enum": [
                "Boolean",
                "Date",
                "Double",
                "Float",
                "Integer",
                "Long",
                "Object",
                "String"
            ],
            "type": "string"
        },
        "Valid": {
            "properties": {
                "max": {
                    "description": "适用于Length、Size类型",
                    "type": "number"
                },
                "message": {
                    "description": "保存信息, 非Pattern类型留空自动生成即可",
                    "type": "string"
                },
                "min": {
                    "description": "适用于Length、Size类型",
                    "type": "number"
                },
                "regexp": {
                    "description": "适用于Pattern类型",
                    "type": "string"
                },
                "type": {
                    "$ref": "#/definitions/ValidType"
                },
                "value": {
                    "description": "适用于Max、Min类型",
                    "type": "number"
                }
            },
            "required": [
                "type"
            ],
            "type": "object"
        },
        "ValidType": {
            "enum": [
                "Length",
                "Max",
                "Min",
                "NotBlank",
                "NotEmpty",
                "NotNull",
                "Pattern",
                "Size"
            ],
            "type": "string"
        }
    },
    "properties": {
        "apis": {
            "description": "api列表",
            "items": {
                "$ref": "#/definitions/Api"
            },
            "type": "array"
        },
        "author": {
            "description": "创建者",
            "type": "string"
        },
        "desc": {
            "description": "Controller注释",
            "type": "string"
        },
        "name": {
            "description": "ClassName",
            "type": "string"
        },
        "package": {
            "description": "包名",
            "type": "string"
        },
        "path": {
            "type": "string"
        },
        "platform": {
            "description": "暂时无用",
            "type": "string"
        },
        "userType": {
            "description": "暂时无用",
            "type": "string"
        }
    },
    "required": [
        "apis",
        "author",
        "desc",
        "name",
        "package",
        "path"
    ],
    "type": "object"
}

