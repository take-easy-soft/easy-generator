{
    "$schema": "./scheme.json",
    "name": "Test",
    "desc": "测试Controler",
    "package": "com.etm.test",
    "author": "乌龙茶",
    "path": "/test",
    "apis": [{
        
    },
        {
            "name": "getUser",
            "desc": "校验路径参数",
            "path": "/path_variable/{name}",
            "method": "GET",
            "request": {
                "pathVar": {
                    "organizationId": {
                        "type": "Integer",
                        "desc": "名称",
                        "valid": [
                            {
                                "type": "Pattern",
                                "regexp": "\\d{5}",
                                "message": "名称格式不正确"
                            },
                            {
                                "type": "NotEmpty"
                            }
                        ]
                    }
                },
                "queryParam": {
                    "name": {
                        "type": "String",
                        "desc": "姓名",
                        "valid": {
                            "type": "NotEmpty"
                        }
                    },
                    "age": {
                        "type": "Integer",
                        "desc": "年龄"
                    }
                }
            },
            "response": {
                "body": {
                    "result": {
                        "type": "String",
                        "desc": "结果"
                    },
                    "message": {
                        "type": "String",
                        "desc": "附带详情"
                    }
                }
            }
        },
        {
            "name": "testRequestBody",
            "desc": "测试RequestBody参数",
            "path": "/requestBody",
            "method": "POST",
            "request": {
                "body": {
                    "organizationId": {
                        "type": "String",
                        "desc": "组织ID",
                        "valid": [
                            {
                                "type": "Pattern",
                                "regexp": "\\w{5}",
                                "message": "organizationId长度必须是5"
                            },
                            {
                                "type": "NotEmpty"
                            },
                            {
                                "type": "Max",
                                "value": 20
                            },
                            {
                                "type": "Length",
                                "min": 3,
                                "max": 20
                            },
                            {
                                "type": "Size",
                                "min": 5,
                                "max": 10
                            },
                            {
                                "type": "NotBlank"
                            }
                        ]
                    }
                }
            },
            "response": {
                "body": {
                    "result": {
                        "type": "String",
                        "desc": "结果"
                    }
                }
            }
        }
    ]
}